<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.enrique.mansiones_locura.Cocina"
    android:background="@drawable/cocina">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblRecibidor"
        android:id="@+id/button11"
        android:onClick="toRecibidor"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/txtlblVida"
        android:id="@+id/textView25"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/button11"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/txtlblTurno"
        android:id="@+id/textView26"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView25"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/txtlblAccion"
        android:id="@+id/textView27"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView26"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TEST"
        android:id="@+id/lblActionCoc"
        android:layout_marginBottom="5dp"
        android:layout_alignTop="@+id/textView27"
        android:layout_alignEnd="@+id/lblTurnoCoc"
        android:textSize="15sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TEXT"
        android:id="@+id/lblTurnoCoc"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/lblActionCoc"
        android:layout_toRightOf="@+id/textView27"
        android:layout_marginLeft="23dp"
        android:textSize="15sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TEST"
        android:id="@+id/lblVidaCoc"
        android:layout_below="@+id/lblTurnoCoc"
        android:layout_toRightOf="@+id/textView27"
        android:layout_marginLeft="23dp"
        android:textSize="15sp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblCocina"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnExpltxt"
        android:id="@+id/button20"
        android:onClick="explorar"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button11" />

</RelativeLayout>
